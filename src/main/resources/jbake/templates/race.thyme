<!DOCTYPE html>
<html lang="en" xmlns="http://www.w3.org/1999/xhtml"
	xmlns:th="http://www.thymeleaf.org">
<head th:include="fragments/head.thyme::head"></head>
<body>

	<div th:replace="fragments/header.thyme::header"></div>

	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">

				
						<div class="waga-tab-content">
							<table class="table table-striped">
								<thead>
									<tr>
										<th>Rank</th>
										<th>Player</th>
										<th>Played</th>
										<th>Points</th>
										<th>Top Scores</th>
									</tr>
								</thead>
								<tbody>
									<tr th:each="ranking : ${config.data.currentRaceToCiaoBellaSeasonStats.rankings}">
										<td th:text="${ranking.position}"></td>
										<td th:text="${ranking.player}"></td>
										<td th:text="${ranking.played}"></td>
										<td th:text="${ranking.points}"></td>
										<td th:text="${ranking.topScores}"></td>
									</tr>
								</tbody>
							</table>
						</div>

				<hr />
				
				<th:block  th:each="tournament : ${config.data.currentRaceToCiaBellaSeason.tournamentsSortedByRecent}">
				<div class="panel panel-default">
					  <div class="panel-heading" th:text="${tournament.venue.name} + ' | ' + ${#dates.format(tournament.date, 'yyyy-MM-dd')}"></div>
					  <div class="panel-body">
							<table class="table">
								<thead>
									<tr>
										<th>Position</th>
										<th>Player</th>
										<th>Handicap</th>
										<th>Points</th>
									</tr>
								</thead>
								<tbody>
									<tr th:each="result,iterstat : ${tournament.sortedResults()}">
										<td th:text="${iterstat.count}"></td>
										<td th:text="${result.player.fullName}"></td>
										<td th:text="${result.handicap}"></td>
										<td th:text="${result.score}"></td>
									</tr>
								</tbody>
							</table>
					  </div>
					  
					</div>
				</th:block>

			</div>
			
		</div>
	</div>

	<th:block th:include="fragments/scripts.thyme::scripts"></th:block>

</body>
</html>